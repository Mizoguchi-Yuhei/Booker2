<%= form_with model: book, local:true do |f| %>
  <div class="form-group">
    <div>
      <%= f.label :title %> <!--変更-->
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div>
      <%= f.label :opinion %> <!--変更-->
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book",class: "btn btn-success" %>
  </div>
<% end %>